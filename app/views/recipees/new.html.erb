<h1>Create New Recipe</h1>

<% if @recipe.errors.any? %>
  <h2>The following errors prevent the recipe from being saved</h2>
  <ul>
    <%@recipe.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @recipe, url: recipees_path, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br><br>

  <%= form.label :description %>
  <%= form.text_area :description %> <br><br>

  <%= form.label :preparation_time %>
  <%= form.text_field :preparation_time %> <br><br>

  <%= form.label :cooking_time %>
  <%= form.text_field :cooking_time %> <br><br>

  <%= form.radio_button :public, 'public' %>
  <%= form.label :public, "Is this recipe public?" %>
  <br><br>
  <%= form.submit %>
<% end %>