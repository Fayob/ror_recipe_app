<h1>Create New Food</h1>

<%= form_with model: @food, url: foods_path, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br><br>

  <%= form.label :measurement_unit %>
  <%= form.text_field :measurement_unit, placeholder: 'grams' %> <br><br>

  <%= form.label :price %>
  <%= form.text_field :price %> <br><br>

  <%= form.label :quantity %>
  <%= form.text_field :quantity %> <br>

  <%= form.submit %>
<% end %>