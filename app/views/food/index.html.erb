<% if @foods.empty? %>
  <p>You currently have no food </p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Food</th> 
        <th>Measurement Unit</th> 
        <th>Unit Price</th> 
        <th>Action</th> 
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @foods.each do |food| %>
        <%= food.name %>
        <%= food.measurement_unit %>
        <%= `$#{food.price}` %>
        <td>Delete</td>
      <% end %>
      </tr>
    </tbody>

  </table>
<% end %>